<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Define bean-->
    <bean id="class1" class="fit.iuh.thang.xmlbased._Class">
        <property name="classId" value="DHKTPM17C"/>
        <property name="className" value="DAi hoc KTPM17C"/>
    </bean>
    <bean id="student1" class="fit.iuh.thang.xmlbased.Student">
        <property name="id" value="002"/>
        <property name="name" value="value2"/>
    </bean>

    <bean id="student2" class="fit.iuh.thang.xmlbased.Student">
        <property name="id" value="002"/>
        <property name="name" value="value2"/>
        <property name="class_" ref="class1"/>
    </bean>
<!--    Injection by constructor-->
    <bean id="student3" class="fit.iuh.thang.xmlbased.Student">
        <constructor-arg value="003"/>
        <constructor-arg value="value3"/>
        <constructor-arg ref="class1"/>
    </bean>
